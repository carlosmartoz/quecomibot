{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "allowJs": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["api/**/*", "bot.js"],
    "exclude": ["node_modules", "dist"]
  }